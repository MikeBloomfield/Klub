//main styles
.main-wrapper
	padding 0 0 0 0
	min-width $min-width
	width 100%
	position relative
	overflow hidden
	min-height 100%
	display flex
	flex-direction column
	justify-content space-between

.wrapper
	min-width $min-width
	max-width $max-width
	padding 0 30px 0 30px
	margin 0 auto
	position relative

/* titles */
p
	font($base-font-size, $base-line-height, $text-color, $custom-font-family, 400)

h1
	font($font-size-h1, $line-height-h1, $title-color, $custom-font-family, 700)

h2
	font($font-size-h2, $line-height-h2, $title-color, $custom-font-family, 700)

h3
	font($font-size-h3, $line-height-h3, $title-color, $custom-font-family, 700)

/* styles */
.main
	min-width $min-width
	width 100%


.button
	font-weight: 700;
	font-size: 14px;
	line-height: 14px;
	color: $black
	display block
	padding: 18px 0
	background: #fff
	border-radius: 15px
	text-align center
