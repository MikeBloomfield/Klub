.slider
	background: F9FAFC
	.wrapper
		max-width: 1440px
		padding: 0

.swiper
	max-width: 1440px;
	max-height: 800px;
	overflow: hidden
	&-slide
		max-width: 1440px


.swiper-container-vertical>.swiper-pagination-bullets
	right: 60px
.swiper-container-vertical>.swiper-pagination-bullets .swiper-pagination-bullet
	margin: 24px 0
.swiper-wrapper
	transform-style: flat
.swiper-pagination-bullet
	width: 6px;
	height: 6px;
	border: 1px solid #030402;
	background: #fff
.swiper-pagination-bullet-active
	background: #030402
.swiper-container-horizontal>.swiper-pagination-bullets
	bottom: 30px




.how
	background: #F9FAFC;
	padding: 160px 0 180px
	&__title
		margin-bottom 80px
		font-weight: 700;
		font-size: 60px;
		line-height: 68px;
		text-align: center;
		letter-spacing: -1.5px;
		color: #030402;
	&__wrapper
		display flex
		justify-content: center
		gap: 40px
		flex-wrap: wrap
		max-width: 1280px
	&__item
		display flex
		flex-direction: column
		align-items: center
		justify-content: flex-start
		path
			stroke-dasharray: 1000
			stroke-dashoffset: 0
		&-pic
			width: 120px
			display flex
			justify-content: center
			height: 120px
			align-items: center
			margin-bottom 40px
			border-radius: 30px
			background: #fff
		&-title
			font-weight: 700;
			font-size: 34px;
			line-height: 34px;
			text-align: center;
			letter-spacing: -1px;
			color: #030402;
			margin-bottom 20px
		&-desc
			font-weight: 700;
			font-size: 18px;
			line-height: 24px;
			text-align: center;
			letter-spacing: -0.5px;
			color: #030402;
			mix-blend-mode: normal;
			opacity: 0.5;
			max-width: 290px
			margin: auto


.video
	padding: 160px 0 0 0
	position relative
	&__bg
		background: url('../img/main/bg-join.jpg')
		background-repeat: no-repeat
		background-position: top
		background-size: 1440px 690px
		position absolute
		top: 0
		left: 0
		right: 0
		bottom: 0
		&-outer
			width: 1440px
			height: 690px
			top: 0
			left: 50%
			transform: translateX(-50%)
			position absolute
			z-index -1
			overflow: hidden
	&__abs-outer
		position absolute
		top: 0
		left: 0
		right: 0
		bottom: 0
		z-index 1
		overflow: hidden
		border-radius: 30px
	&__abs
		max-width: 1040px
		transform: scale(1.5)
	&__wrapper
		max-width: 1040px
		margin: auto
	&__title
		font-weight: 700;
		font-size: 60px;
		line-height: 68px;
		text-align: center;
		letter-spacing: -1.5px;
		color: #030402;
		max-width: 800px
		margin: 0 auto 60px
	&__subtitle
		width: 100%
		display flex
		justify-content: center
		position absolute
		top: 70%
		left: 50%
		transform: translateX(-50%)
		font-size 90px
		line-height 93px
		text-align left
		color: #fff
		letter-spacing: -3px
		text-transform uppercase
	&__wrapper-block
		max-width: 1120px
		margin: auto
		padding: 120px 15px 0
		position relative
	&__block
		background-size: cover
		background-repeat: no-repeat
		text-align: center;
		overflow: hidden;
		max-width: 1040px;
		padding-top: 66.75%;
		position relative
		margin: auto
		&.activeVideo 
			background: none
			.video__startBlock
				opacity 1
				pointer-events: none
			.video__iframe
				opacity 1
				pointer-events: all
	&__startBlock
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		width: 100%;
		height: 100%;
		z-index: 2
		&-btn
			position: absolute;
			top: 50%;
			left: 50%;
			width: 18.75%;
			-webkit-transform: translate(-50%, -50%);
			transform: translate(-50%, -50%);
			cursor: pointer;
			-webkit-transition: all 0.3s ease-in;
			transition: all 0.3s ease-in;
			display: -webkit-box;
			display: -ms-flexbox;
			display: flex;
			-webkit-box-pack: center;
			-ms-flex-pack: center;
			justify-content: center;
			-webkit-box-align: center;
			-ms-flex-align: center;
			align-items: center;
			transition: $default-transition
			text-transform uppercase
			font-weight: 400;
			font-size: 14px;
			line-height: 16px;
			letter-spacing: 2px;
			color: $title-color
			gap: 15px
			&:hover
				opacity .8
	&__iframe
		position: absolute;
		top: 0%;
		left: 0;
		bottom: 0;
		right: 0;
		width: 100%;
		height: 100%;
		opacity 0
		pointer-events: none

